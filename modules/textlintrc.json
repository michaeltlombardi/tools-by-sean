{
    "rules": {
        "@textlint-rule/no-unmatched-pair": true,
        "@textlint-rule/no-invalid-control-character": {
            "checkCode": true,
            "checkImage": true
        },
        "period-in-list-item": false,
        "terminology": {
            "defaultTerms": true,
            "skip": [
                "Blockquote"
            ],
            "terms": [
                "JavaScript",
                "ESLint",
                "Sass",
                "Less",
                "npm", [
                    "front[- ]end(\\w*)",
                    "frontend$1"
                ],
                [
                    "back[- ]end(\\w*)",
                    "backend$1"
                ],
                [
                    "repo\\b",
                    "repository"
                ],
                [
                    "(\\w+[^.?!]\\)? )webpack",
                    "$1webpack"
                ],
                [
                    "(\\w+[^.?!]\\)? )internet",
                    "$internet"
                ]
            ],
            "exclude": [
                "CSS",
                "node"
            ]
        },
        "no-empty-section": true,
        "max-comma": {
            "max": 4
        },
        "no-start-duplicated-conjunction": {
            "interval": 2
        },
        "unexpanded-acronym": {
            "min_acronym_len": 3
        },
        "abbr-within-parentheses": true,
        "alex": {
            "allow": [
                "execute",
                "executes",
                "executed",
                "execution",
                "disabled",
                "host",
                "host-hostess",
                "hostesses-hosts",
                "failure",
                "remains"
            ]
        },
        "common-misspellings": {
            "ignore": []
        },
        "stop-words": {
            "defaultWords": true,
            "skip": [
                "Blockquote"
            ],
            "words": [],
            "exclude": [
                "utilize"
            ]
        },
        "en-capitalization": false
    },
    "filters": {
        "node-types": {
            "nodeTypes": [
                "BlockQuote"
            ]
        },
        "comments": true
    }
}
