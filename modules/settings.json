        }
    ],
    "editor.acceptSuggestionOnEnter": "off",
    "docs-build.userType": "Microsoft Employee",
    "gitlens.mode.active": "zen",
    "workbench.editor.pinnedTabSizing": "shrink",
    "json.maxItemsComputed": 8000,
