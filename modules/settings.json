// Place your settings in this file to overwrite the default settings
{
    // Acrolinx
    "acrolinx.serverAddress": "https://microsoft-ce-csi.acrolinx.cloud",
    // Editor
    "editor.detectIndentation": true,
    "editor.dragAndDrop": false,
    "editor.insertSpaces": true,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    //"editor.rulers": [1, 2, 3, 4, 5, 76, 80],
    "editor.rulers": [1, 2, 3, 4, 5, 76, 80, 100, 150, 300],
    "editor.wordWrap": "wordWrapColumn",
    //"editor.wordWrapColumn": 80,
    "editor.wordWrapColumn": 100,
    //"reflowMarkdown.preferredLineLength": 79,
    "reflowMarkdown.preferredLineLength": 100,
    // Misc. Settings
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolSortOrder": "position",
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "extensions.autoUpdate": true,
    "window.restoreWindows": "none",
    "window.zoomLevel": 0,
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    // Status bar settings
    "debug.showInStatusBar": "always",
    "git.enableStatusBarSync": false,
    "selectline.displayFormat": "$(list-ordered) Lines: %d",
    "selectline.statusbarPriority": 1,
    "workbench.statusBar.visible": true,
    // Files
    "files.trimTrailingWhitespace": true,
    // Terminal
    "terminal.integrated.shell.windows": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.external.windowsExec": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.fontFamily": "Menlo, Monaco, Consolas, \"Droid Sans Mono\", \"Courier New\", monospace, \"Droid Sans Fallback\"",
    "terminal.integrated.fontSize": 11,
    // Mardown-PDF
    "markdown-pdf.format": "Letter",
    "markdown-pdf.margin.top": "0.75in",
    "markdown-pdf.margin.bottom": "0.75in",
    "markdown-pdf.margin.right": "0.5in",
    "markdown-pdf.margin.left": "0.5in",
    // Docs Extension settings
    "docs.templates.alias": "sewhee",
    "docs.templates.githubid": "sdwheeler",
    // Configure editor settings to be overridden for [markdown] language.
    "markdown.showToolbar": true,
    "markdown.docsetLanguages": [
        "Bash",
        "C#",
        "JSON",
        "Managed Object Format",
        "PowerShell",
        "XML",
        "YAML"
    ],
    "[markdown]": {
        "editor.quickSuggestions": true,
        "editor.tabSize": 2
    },
    // textlint
    "textlint.configPath": "C:\\Users\\swheeler.000\\textlintrc.json",
    "textlint.run": "onType",
    "textlint.nodePath": "",
    // MDLint
    "markdownlint.customRules": [
        "{docsmsft.docs-linting}/markdownlint-custom-rules/rules.js"
    ],
    "markdownlint.config": {
        "blanks-around-fences": true,
        "blanks-around-headers": true,
        "blanks-around-lists": true,
        "code-block-style": {
            "style": "fenced"
        },
        "code-fence-style": {
            "style": "backtick"
        },
        "commands-show-output": true,
        "fenced-code-language": false,
        "first-line-h1": {
            "front_matter_title": ""
        },
        "first-line-heading": true,
        "header-increment": true,
        "header-start-left": true,
        "header-style": {
            "style": "atx"
        },
        "hr-style": {
            "style": "---"
        },
        "line-length": {
            "line_length": 100,
            "heading_line_length": 100,
            "code_blocks": false,
            "headings": true,
            "strict": true,
            "tables": false
        },
        "list-indent": true,
        "list-marker-space": true,
        "no-alt-text": true,
        "no-bare-urls": true,
        "no-blanks-blockquote": true,
        "no-duplicate-header": {
            "siblings_only": true
        },
        "no-emphasis-as-header": true,
        "no-empty-links": true,
        "no-hard-tabs": true,
        "no-inline-html": {
            "allowed_elements": [
                "a",
                "br",
                "code",
                "kbd",
                "li",
                "properties",
                "sup",
                "tags",
                "ul"
            ]
        },
        "no-missing-space-atx": true,
        "no-missing-space-closed-atx": true,
        "no-multiple-blanks": true,
        "no-multiple-space-atx": true,
        "no-multiple-space-blockquote": true,
        "no-multiple-space-closed-atx": true,
        "no-reversed-links": true,
        "no-space-in-code": true,
        "no-space-in-emphasis": true,
        "no-space-in-links": true,
        "no-trailing-punctuation": {
            "punctuation": ".,;:!。，；：！？"
        },
        "no-trailing-spaces": true,
        "ol-prefix": {
            "style": "one"
        },
        "proper-names": {
            "code_blocks": false,
            "names": [
                "PowerShell",
                "IntelliSense",
                "Authenticode",
                "CentOS",
                "Contoso",
                "CoreOS",
                "Debian",
                "Ubuntu",
                "openSUSE",
                "RHEL",
                "JavaScript",
                ".NET",
                "NuGet",
                "VS Code"
            ]
        },
        "single-h1": {
            "front_matter_title": ""
        },
        "single-trailing-newline": true,
        "ul-indent": {
            "indent": 2,
            "start_indented": false
        },
        "ul-start-left": true,
        "ul-style": {
            "style": "dash"
        },
        "MD025": {
            "front_matter_title": ""
        },
        "MD028": false
    },
