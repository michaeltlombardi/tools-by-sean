{
    "filters": {
        "comments": true,
        "node-types": {
            "nodeTypes": [
                "BlockQuote"
            ]
        }
    },
    "rules": {
        "@textlint-rule/no-invalid-control-character": {
            "checkCode": true,
            "checkImage": true
        },
        "@textlint-rule/no-unmatched-pair": false,
        "abbr-within-parentheses": true,
        "alex": {
            "allow": [
                "color",
                "execute",
                "executes",
                "executed",
                "execution",
                "disabled",
                "host",
                "host-hostess",
                "hostesses-hosts",
                "failure",
                "remains"
            ]
        },
        "common-misspellings": {
            "ignore": []
        },
        "en-capitalization": false,
        "max-comma": {
            "max": 4
        },
        "no-empty-section": true,
        "no-start-duplicated-conjunction": {
            "interval": 2
        },
        "period-in-list-item": false,
        "stop-words": {
            "defaultWords": true,
            "exclude": [
                "utilize"
            ],
            "skip": [
                "Blockquote"
            ],
            "words": [
                [
                    "will"
                ],
                [
                    "by using",
                    "using"
                ]
            ]
        },
        "terminology": {
            "defaultTerms": true,
            "exclude": [
                "CSS",
                "node"
            ],
            "skip": [
                "Blockquote"
            ],
            "terms": [
                "JavaScript",
                "ESLint",
                "Sass",
                "Less",
                "npm",
                [
                    "front[- ]end(\\w*)",
                    "frontend$1"
                ],
                [
                    "back[- ]end(\\w*)",
                    "backend$1"
                ],
                [
                    "repo\\b",
                    "repository"
                ],
                [
                    "(\\w+[^.?!]\\)? )webpack",
                    "$1webpack"
                ],
                [
                    "(\\w+[^.?!]\\)? )internet",
                    "$internet"
                ]
            ]
        },
        "unexpanded-acronym": {
            "ignore_acronyms": [
                "AWS",
                "CIM",
                "CLR",
                "CSV",
                "DCOM",
                "DMTF",
                "DNF",
                "DSC",
                "FQDN",
                "ISE",
                "JSON",
                "LTS",
                "NET",
                "NOTE",
                "OSS",
                "RPM",
                "SQL",
                "SSH",
                "TLS",
                "URI",
                "URL",
                "XDG",
                "XML"
            ],
            "max_acronym_len": 5,
            "min_acronym_len": 3
        }
    }
}