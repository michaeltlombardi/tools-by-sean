// Place your settings in this file to overwrite the default settings
{
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.quickSuggestions": true,
        "editor.tabSize": 2
    },
    "[powershell]": {
        "files.encoding": "utf8bom"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    // Acrolinx
    "acrolinx.serverAddress": "https://microsoft-ce-csi.acrolinx.cloud",

    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolSortOrder": "position",

    // Spellchecker settings
    "cSpell.language": "en,en-US",
    "cSpell.languageSettings": [
        {
            "dictionaries": [
                "wordsEn"
            ],
            "languageId": "*",
            "locale": "en"
        },
        {
            "dictionaries": [
                "wordsEn"
            ],
            "languageId": "*",
            "locale": "en-US"
        },
        {
            "dictionaries": [
                "wordsEnGb"
            ],
            "languageId": "*",
            "locale": "en-GB"
        },
        {
            "dictionaries": [
                "companies",
                "softwareTerms",
                "misc"
            ],
            "languageId": "*"
        },
        {
            "dictionaries": [
                "azureTerms",
                "powershell"
            ],
            "languageId": "markdown"
        }
    ],
    "cSpell.showStatus": false,
    "cSpell.userWords": [
        "assetid",
        "Authenticode",
        "autodetect",
        "Autogenerated",
        "autoloaded",
        "Autosave",
        "azurecli",
        "backticks",
        "blog",
        "callout",
        "callouts",
        "carmonm",
        "CDXML",
        "CentOS",
        "checkboxes",
        "cmdlet",
        "cmdlets",
        "COMPUTERNAME",
        "Contoso",
        "CoreOS",
        "customizations",
        "Datacenter",
        "Debian",
        "deserialization",
        "deserialized",
        "deserializes",
        "devlang",
        "DHCP",
        "differentiators",
        "Discoverability",
        "documentationcenter",
        "Etag",
        "Etags",
        "executables",
        "Fabrikam",
        "failover",
        "frontmatter",
        "GUID",
        "Hardlink",
        "hashtable",
        "hashtables",
        "hasthable",
        "HKLM",
        "hotfix",
        "hotfixes",
        "HTTPS",
        "Infographic",
        "IntelliSense",
        "interpretted",
        "Intranet",
        "Intrinsics",
        "Intune",
        "JavaScript",
        "Kerberos",
        "kubectl",
        "Kubernetes",
        "lifecycle",
        "MAML",
        "markdig",
        "msiexec",
        "multithreading",
        "netsh",
        "netstandard",
        "Newtonsoft",
        "Newtonsoft's",
        "nslookup",
        "NTFS",
        "NTLM",
        "nuget",
        "onboarding",
        "openSUSE",
        "Pandoc",
        "pltfrm",
        "PowerShell",
        "Prerelease",
        "pscustomobject",
        "PSHOME",
        "pwsh",
        "quickstart",
        "Quickstarts",
        "Raspbian",
        "Recurse",
        "recurses",
        "rehydrated",
        "remoting",
        "Reparse",
        "RHEL",
        "runbook",
        "runbooks",
        "Runspace",
        "runspaces",
        "runtimes",
        "scalability",
        "scanability",
        "SCCM",
        "scriptable",
        "scriptblocks",
        "scripter",
        "scripters",
        "Sddl",
        "SDKs",
        "sdwheeler",
        "sewhee",
        "Snover",
        "Sqlcmd",
        "subfolder",
        "subkey",
        "subkeys",
        "subnet",
        "subnets",
        "Symlink",
        "taskbar",
        "triaged",
        "Ubuntu",
        "unencrypted",
        "Uninstallation",
        "untrusted",
        "updateable",
        "virtualized",
        "virtualizes",
        "w3wp",
        "walkthrough",
        "Webservice",
        "winget",
        "workgroup"
    ],

    "csharp.suppressDotnetRestoreNotification": true,

    "debug.showInStatusBar": "always",

    // Docs Extension settings
    "docs-build.real-TimeValidation.automaticallyEnable": false,
    "docs-build.userType": "Microsoft Employee",
    "docs.templates.alias": "sewhee",
    "docs.templates.githubid": "sdwheeler",

    // Editor
    "editor.acceptSuggestionOnEnter": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.detectIndentation": true,
    "editor.dragAndDrop": false,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [1, 2, 3, 4, 5, 76, 80],
    //"editor.rulers": [1, 2, 3, 4, 5, 76, 80, 100, 150, 300],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    //"editor.wordWrapColumn": 100,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "extensions.autoUpdate": true,

    // Files
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,

    // git extension
    "git.autofetch": true,
    "git.enableStatusBarSync": false,

    // github issues-prs
    "github.repositories": [
        "powershell/powershell-docs",
        "powershell/powershell"
    ],
    "github.username": "sdwheeler",

    // GitLens settings
    "gitlens.blame.toggleMode": "window",
    "gitlens.mode.active": "zen",

    "json.maxItemsComputed": 8000,

    // Mardown-PDF
    "markdown-pdf.format": "Letter",
    "markdown-pdf.margin.bottom": "0.75in",
    "markdown-pdf.margin.left": "0.5in",
    "markdown-pdf.margin.right": "0.5in",
    "markdown-pdf.margin.top": "0.75in",

    "markdown.docsetLanguages": [
        "Bash",
        "C#",
        "JSON",
        "Managed Object Format",
        "PowerShell",
        "XML",
        "YAML"
    ],

    // Configure markdown extension
    "markdown.replaceSmartQuotes": true,
    "markdown.showToolbar": true,

    // MDLint
    "markdownlint.config": {
        "MD025": {
            "front_matter_title": ""
        },
        "MD028": false,
        "blanks-around-fences": true,
        "blanks-around-headers": true,
        "blanks-around-lists": true,
        "code-block-style": {
            "style": "fenced"
        },
        "code-fence-style": {
            "style": "backtick"
        },
        "commands-show-output": true,
        "fenced-code-language": false,
        "first-line-h1": {
            "front_matter_title": ""
        },
        "first-line-heading": true,
        "header-increment": true,
        "header-start-left": true,
        "header-style": {
            "style": "atx"
        },
        "hr-style": {
            "style": "---"
        },
        "line-length": {
            "code_blocks": false,
            "heading_line_length": 100,
            "headings": true,
            "line_length": 100,
            "strict": true,
            "tables": false
        },
        "list-indent": true,
        "list-marker-space": true,
        "no-alt-text": true,
        "no-bare-urls": true,
        "no-blanks-blockquote": true,
        "no-duplicate-header": {
            "siblings_only": true
        },
        "no-emphasis-as-header": true,
        "no-empty-links": true,
        "no-hard-tabs": true,
        "no-inline-html": {
            "allowed_elements": [
                "a",
                "br",
                "code",
                "kbd",
                "li",
                "properties",
                "sup",
                "tags",
                "ul"
            ]
        },
        "no-missing-space-atx": true,
        "no-missing-space-closed-atx": true,
        "no-multiple-blanks": true,
        "no-multiple-space-atx": true,
        "no-multiple-space-blockquote": true,
        "no-multiple-space-closed-atx": true,
        "no-reversed-links": true,
        "no-space-in-code": true,
        "no-space-in-emphasis": true,
        "no-space-in-links": true,
        "no-trailing-punctuation": {
            "punctuation": ".,;:!。，；：！？"
        },
        "no-trailing-spaces": true,
        "ol-prefix": {
            "style": "one"
        },
        "proper-names": {
            "code_blocks": false,
            "names": [
                "PowerShell",
                "IntelliSense",
                "Authenticode",
                "CentOS",
                "Contoso",
                "CoreOS",
                "Debian",
                "Ubuntu",
                "openSUSE",
                "RHEL",
                "JavaScript",
                ".NET",
                "NuGet",
                "VS Code",
                "Newtonsoft"
            ]
        },
        "single-h1": {
            "front_matter_title": ""
        },
        "single-trailing-newline": true,
        "ul-indent": {
            "indent": 2,
            "start_indented": false
        },
        "ul-start-left": true,
        "ul-style": {
            "style": "dash"
        }
    },
    "markdownlint.customRules": [
        "{docsmsft.docs-linting}/markdownlint-custom-rules/rules.js"
    ],

    "mdtableeditor.commandViews": {
        "context": [
            "MdTableEditor.fillCells",
            "MdTableEditor.insertTop",
            "MdTableEditor.insertBottom",
            "MdTableEditor.insertLeft",
            "MdTableEditor.insertRight",
            "MdTableEditor.removeColumn",
            "MdTableEditor.removeRow",
            "MdTableEditor.columnSelectEmpty",
            "MdTableEditor.sortNumberAsc",
            "MdTableEditor.sortNumberDesc",
            "MdTableEditor.sortTextAsc.ignore",
            "MdTableEditor.sortTextDesc.ignore"
        ],
        "toolbar": [
            "MdTableEditor.beautifulFormat",
            "MdTableEditor.changeAlignCenter",
            "MdTableEditor.changeAlignLeft",
            "MdTableEditor.changeAlignRight",
            "MdTableEditor.fillCells",
            "MdTableEditor.insertBottom",
            "MdTableEditor.insertLeft",
            "MdTableEditor.insertRight",
            "MdTableEditor.insertTop",
            "MdTableEditor.naturalFormat",
            "MdTableEditor.removeColumn",
            "MdTableEditor.removeRow",
            "alignments",
            "format",
            "insert",
            "remove"
        ]
    },
    "mdtableeditor.isAutoFormatterEnabled": true,
    "mdtableeditor.isIconMenuEnabled": true,
    "mdtableeditor.isTreeViewEnabled": true,

    "omnisharp.projectLoadTimeout": 120,

    // PowerShell extension
    "powershell.codeFormatting.addWhitespaceAroundPipe": false,
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    "powershell.codeFormatting.useConstantStrings": true,
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    "powershell.integratedConsole.forceClearScrollbackBuffer": true,
    "powershell.scriptAnalysis.enable": true,

    // Redhat
    "redhat.telemetry.enabled": true,

    "reflowMarkdown.preferredLineLength": 79,
    //"reflowMarkdown.preferredLineLength": 100,

    // SCM
    "scm.defaultViewMode": "tree",

    // Security
    "security.workspace.trust.untrustedFiles": "open",

    // Selectline
    "selectline.displayFormat": "$(list-ordered) Lines: %d",
    "selectline.statusbarPriority": 1,

    // Terminal
    "terminal.external.windowsExec": "C:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.fontFamily": "\"Cascadia Code PL\", Consolas, \"Droid Sans Mono\", \"Courier New\", monospace, \"Droid Sans Fallback\"",
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    //"terminal.integrated.shell.windows": "C:/Program Files/PowerShell/7/pwsh.exe",

    // textlint
    "textlint.configPath": "C:\\Users\\sewhee\\textlintrc.json",
    "textlint.nodePath": "",
    "textlint.run": "onType",
    "textlint.trace": "verbose",

    // VS Icons
    "vsicons.dontShowNewVersionMessage": true,

    // Window settings
    "window.restoreWindows": "none",

    // Workbench settings
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,

    // XML settings
    "xml.fileAssociations": [
        {
            "pattern": "**/*.Format.ps1xml",
            "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Format.xsd"
        },
        {
            "pattern": "**/*.Types.ps1xml",
            "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Types.xsd"
        }
    ],

    // YAML settings
    "yaml.format.enable": true,
    "yaml.schemas": {
        "file:///toc.schema.json": "/toc\\.yml/i"
    },
    "cSpell.ignoreWords": [
        "Spacebar"
    ],
}
